<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <template id="report_invoice_document_template" inherit_id="account.report_invoice_document">

        <xpath expr="//h2[1]" position="attributes">
                <attribute name="t-att-style">"font-size: 25px;"</attribute>
        </xpath>

        <xpath expr="//div[hasclass('page')]" position="attributes">
                <attribute name="t-att-style">"line-height: 1;"</attribute>
        </xpath>
        <xpath expr="//div[hasclass('page')]" position="inside">
                <style>
                    p {
                      font-size: 13px;
                    }
                    .barcode img{
                      width: 140px;
                      height: 140px;
                    }
                </style>
        </xpath>

        <xpath expr="//div[hasclass('mt16')]" position="attributes">
                <attribute name="style">font-size: 13px; padding-top: 0;</attribute>
        </xpath>
        <xpath expr="//address[1]" position="attributes">
                <attribute name="style">font-size: 13px;padding-top: 0;</attribute>
        </xpath>
        <xpath expr="//table[@name='invoice_line_table']" position="attributes">
                <attribute name="style">font-size: 13px;</attribute>
        </xpath>

        <xpath expr="//div[@id='informations']" position="attributes">
                <attribute name="style">font-size: 13px;margin-bottom: 1rem !important;margin-top: 1rem !important;</attribute>
        </xpath>
        <xpath expr="//div[@id='total']" position="attributes">
                <attribute name="style">font-size: 13px;</attribute>
        </xpath>


    </template>
    


</odoo>