<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="purchase_order_inherit_quickcreate_form" model="ir.ui.view">
        <field name="name">purchase.order.quickcreate.form</field>
        <field name="model">purchase.order</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">

            <xpath expr="//group[1]/group/field[@name='partner_id']" position="attributes">
                <attribute name="options">{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True,&quot;always_reload&quot;: True}</attribute>
            </xpath>

            <xpath expr="//field[@name='order_line']/tree/field[@name='product_id']" position="attributes">
                <attribute name="options">{'no_quick_create':True,'no_create_edit':True,'no_create': True}</attribute>
            </xpath>

            <xpath expr="//field[@name='order_line']/tree/field[@name='product_uom']" position="attributes">
                <attribute name="options">{'no_quick_create':True,'no_create_edit':True,'no_create': True}</attribute>
            </xpath>

            <xpath expr="//group[@name='other_info']/field[@name='user_id']" position="attributes">
                <attribute name="options">{'no_quick_create':True,'no_create_edit':True,'no_open': True, 'no_create': True}</attribute>
            </xpath>
            <xpath expr="//group[@name='other_info']/field[@name='company_id']" position="attributes">
                <attribute name="options">{'no_quick_create':True,'no_create_edit':True,'no_open': True, 'no_create': True}</attribute>
            </xpath>


        </field>
    </record>


</odoo>