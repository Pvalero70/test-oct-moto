<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!--Facturas de clientes,Proveedores, Reembolsos !-->
    <record id="account_move_inherit_quickcreate_form" model="ir.ui.view">
        <field name="name">account.move.quickcreate.form</field>
        <field name="model">account.move</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">

            <xpath expr="//group[@id='header_left_group']/field[@name='partner_id']" position="attributes">
                <attribute name="options">{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}</attribute>
            </xpath>

            <xpath expr="//group[@id='header_right_group']/div/field[@name='invoice_payment_term_id']" position="attributes">
                <attribute name="options">{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}</attribute>
            </xpath>

            <xpath expr="//group[@name='sale_info_group']/field[@name='invoice_user_id']" position="attributes">
                <attribute name="options">{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}</attribute>
            </xpath>

            <xpath expr="//group[@name='sale_info_group']/field[@name='team_id']" position="attributes">
                <attribute name="options">{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}</attribute>
            </xpath>

            <xpath expr="//group[@name='sale_info_group']/field[@name='partner_bank_id']" position="attributes">
                <attribute name="options">{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}</attribute>
            </xpath>

            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='product_id']" position="attributes">
                <attribute name="options">{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}</attribute>
            </xpath>

            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='analytic_account_id']" position="attributes">
                <attribute name="options">{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}</attribute>
            </xpath>

            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='product_uom_id']" position="attributes">
                <attribute name="options">{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}</attribute>
            </xpath>

            <xpath expr="//field[@name='line_ids']/tree/field[@name='account_id']" position="attributes">
                <attribute name="options">{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}</attribute>
            </xpath>

            <xpath expr="//field[@name='line_ids']/tree/field[@name='partner_id']" position="attributes">
                <attribute name="options">{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}</attribute>
            </xpath>

            <xpath expr="//field[@name='line_ids']/tree/field[@name='analytic_tag_ids']" position="attributes">
                <attribute name="options">{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}</attribute>
            </xpath>

            <xpath expr="//field[@name='line_ids']/tree/field[@name='tax_tag_ids']" position="attributes">
                <attribute name="options">{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}</attribute>
            </xpath>

            <xpath expr="//field[@name='line_ids']/tree/field[@name='analytic_account_id']" position="attributes">
                <attribute name="options">{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}</attribute>
            </xpath>

        </field>
    </record>


    <record id="account_payment_inherit_quickcreate_form" model="ir.ui.view">
        <field name="name">account.payment.quickcreate.form</field>
        <field name="model">account.payment</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='partner_id'][1]" position="attributes">
                <attribute name="options">{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}</attribute>
            </xpath>

            <xpath expr="//field[@name='partner_id'][2]" position="attributes">
                <attribute name="options">{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}</attribute>
            </xpath>

            <xpath expr="//field[@name='journal_id']" position="attributes">
                <attribute name="options">{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}</attribute>
            </xpath>



        </field>
    </record>






</odoo>