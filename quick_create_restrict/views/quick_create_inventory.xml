<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="stock_picking_inherit_quickcreate_form" model="ir.ui.view">
        <field name="name">stock.picking.quickcreate.form</field>
        <field name="model">stock.picking</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='partner_id']" position="attributes">
                <attribute name="options">{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}</attribute>
            </xpath>

            <xpath expr="//field[@name='picking_type_id']" position="attributes">
                <attribute name="options">{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}</attribute>
            </xpath>

            <xpath expr="//field[@name='location_id']" position="attributes">
                <attribute name="options">{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}</attribute>
            </xpath>

            <xpath expr="//field[@name='location_dest_id']" position="attributes">
                <attribute name="options">{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}</attribute>
            </xpath>

            <xpath expr="//field[@name='user_id']" position="attributes">
                <attribute name="options">{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}</attribute>
            </xpath>

            <xpath expr="//field[@name='move_ids_without_package']/tree/field[@name='product_id']" position="attributes">
                <attribute name="options">{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}</attribute>
            </xpath>

        </field>
    </record>

    <record id="stock_move_inherit_quickcreate_form" model="ir.ui.view">
        <field name="name">stock.move.quickcreate.form</field>
        <field name="model">stock.move</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="stock.view_move_tree"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='product_id']" position="attributes">
                <attribute name="options">{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}</attribute>
            </xpath>

        </field>
    </record>

    <record id="stock_landed_cost_inherit_quickcreate_form" model="ir.ui.view">
        <field name="name">stock.landed.cost.quickcreate.form</field>
        <field name="model">stock.landed.cost</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="stock_landed_costs.view_stock_landed_cost_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='picking_ids']" position="attributes">
                <attribute name="options">{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}</attribute>
            </xpath>

            <xpath expr="//field[@name='vendor_bill_id']" position="attributes">
                <attribute name="options">{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}</attribute>
            </xpath>


            <xpath expr="//field[@name='cost_lines']/tree/field[@name='product_id']" position="attributes">
                <attribute name="options">{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}</attribute>
            </xpath>

        </field>
    </record>



</odoo>