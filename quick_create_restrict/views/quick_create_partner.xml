<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="res_partner_inherit_quickcreate_form" model="ir.ui.view">
        <field name="name">res.partner.quickcreate.form</field>
        <field name="model">res.partner</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">

            <xpath expr="//group/group/field[@name='state_id']" position="attributes">
                <attribute name="options">{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}</attribute>
            </xpath>

            <xpath expr="//page[@name='sales_purchases']/field[@name='company_id']" position="attributes">
                <attribute name="options">{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}</attribute>
            </xpath>

        </field>
    </record>

    <record id="res_partner_inherit_quickcreatet1_form" model="ir.ui.view">
        <field name="name">res.partner.quickcreatet1.form</field>
        <field name="model">res.partner</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="account.view_partner_property_form"/>
        <field name="arch" type="xml">

            <xpath expr="//page[@name='accounting']/field[@name='property_account_receivable_id']" position="attributes">
                <attribute name="options">{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}</attribute>
            </xpath>
            <xpath expr="//page[@name='accounting']/field[@name='property_account_payable_id']" position="attributes">
                <attribute name="options">{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}</attribute>
            </xpath>

        </field>
    </record>




</odoo>