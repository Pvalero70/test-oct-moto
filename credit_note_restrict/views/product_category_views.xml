<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="product_category_inherit_form" model="ir.ui.view">
        <field name="name">product.category.inherit.form</field>
        <field name="model">product.category</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="account.view_category_property_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='property_account_expense_categ_id']" position="after">
                <field name="account_credit_note_id"
                       domain="[('deprecated','=',False),('internal_type','=','other'),('company_id','=',current_company_id),('is_off_balance','=',False)]"/>
                <field name="account_discount_id"
                       domain="[('deprecated','=',False),('internal_type','=','other'),('company_id','=',current_company_id),('is_off_balance','=',False)]"/>
            </xpath>

        </field>
    </record>

    <!--Oculta si esta activo Facturas Clientes!-->
    <record id="account_move_inherit_create_tree" model="ir.ui.view">
        <field name="name">account.move.inherit.tree</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_out_invoice_tree"/>
        <field name="groups_id" eval="[(6,0,[ref('factura_client_group')])]"/>
        <field name="arch" type="xml">
            <xpath expr='//tree' position='attributes'>
                <attribute name="create">false</attribute>
            </xpath>
        </field>
    </record>

    <record id="account_move_inherit_createf_tree" model="ir.ui.view">
        <field name="name">account.move.inheritf.tree</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="groups_id" eval="[(6,0,[ref('factura_client_group')])]"/>
        <field name="arch" type="xml">
            <xpath expr='//form' position='attributes'>
                <attribute name="attrs">{'create':[('move_type', '=', 'out_invoice')]}</attribute>
            </xpath>
        </field>
    </record>

    <!--Oculta si esta activo Notas de credito Clientes!-->
    <record id="account_move_notes_clientes_create_tree" model="ir.ui.view">
        <field name="name">account.move.inherit.ntclient.tree</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_out_credit_note_tree"/>
        <field name="groups_id" eval="[(6,0,[ref('credit_note_client_group')])]"/>
        <field name="arch" type="xml">
            <xpath expr='//tree' position='attributes'>
                <attribute name="create">false</attribute>
            </xpath>
        </field>
    </record>



    <!--Oculta si esta activo Facturas proveedor!-->
    <record id="account_move_fact_prov_create_tree" model="ir.ui.view">
        <field name="name">account.move.inherit.facprov.tree</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_in_invoice_bill_tree"/>
        <field name="groups_id" eval="[(6,0,[ref('factura_proveedor_group')])]"/>
        <field name="arch" type="xml">
            <xpath expr='//tree' position='attributes'>
                <attribute name="create">false</attribute>
            </xpath>
        </field>
    </record>


    <!--Oculta si esta activo rembolso proveedor!-->
    <record id="account_move_remb_prov_create_tree" model="ir.ui.view">
        <field name="name">account.move.inherit.rembprov.tree</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_in_invoice_refund_tree"/>
        <field name="groups_id" eval="[(6,0,[ref('reembolso_proveedor_group')])]"/>
        <field name="arch" type="xml">
            <xpath expr='//tree' position='attributes'>
                <attribute name="create">false</attribute>
            </xpath>
        </field>
    </record>




</odoo>