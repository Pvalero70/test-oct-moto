<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="repair_order_inherit_button_form" model="ir.ui.view">
        <field name="name">repair.order.inherit.button.form</field>
        <field name="model">repair.order</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="repair.view_repair_order_form"/>
        <field name="arch" type="xml">

            <xpath expr="//button[@name='action_repair_invoice_create']" position="before">
                <field name="create_invoice_permited" invisible="1"/>
            </xpath>

            <xpath expr="//button[@name='action_repair_invoice_create']" position="attributes">
                <attribute name="attrs">{'invisible': ['|','|', ('state', '!=', '2binvoiced'), ('invoice_id', '!=', False),('create_invoice_permited','=',False)]}

                </attribute>
            </xpath>




        </field>
    </record>
</odoo>