<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="res_partner_nameedit_form" model="ir.ui.view">
        <field name="name">res.partner.nameedit.form</field>
        <field name="model">res.partner</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@id='individual']" position="attributes">
                <attribute name="readonly">1</attribute>
                <attribute name="force_save">1</attribute>
            </xpath>

            <xpath expr="//span[@name='address_name'][1]" position="before">
                <field name="first_name" attrs="{'required' : [('company_type', '=', 'person')], 'invisible': [('company_type', '!=', 'person')]}"/>
                <field name="second_name" attrs="{'invisible': [('company_type', '!=', 'person')]}"/>
                <field name="first_ap" attrs="{'required' : [('company_type', '=', 'person')], 'invisible': [('company_type', '!=', 'person')]}"/>
                <field name="second_ap" attrs="{'required' : [('company_type', '=', 'person')], 'invisible': [('company_type', '!=', 'person')]}"/>
            </xpath>

            <xpath expr="//field[@name='email']" position="attributes">
                <attribute name="required">1</attribute>
                <attribute name="attrs">{}</attribute>

            </xpath>
            <xpath expr="//field[@name='phone'][1]" position="attributes">
                <attribute name="required">1</attribute>
            </xpath>

            <xpath expr="//field[@name='vat'][1]" position="before">
                <field name="type_rfc" attrs="{'readonly': [('parent_id','!=',False)], 'invisible': [('company_type', '!=', 'person')]}"/>
                <field name="rfc_general" attrs="{'readonly': [('parent_id','!=',False)], 'invisible': [('type_rfc', '!=', 'general')]}"/>

            </xpath>

            <xpath expr="//field[@name='vat'][1]" position="attributes">
                <attribute name="attrs">{'readonly': [('parent_id','!=',False)], 'invisible': [('type_rfc', '=', 'general')]}</attribute>
            </xpath>

        </field>
    </record>




</odoo>