<odoo>
  <data>

  <record  model="ir.ui.view" id="xml_view_picking_form_inherit">
      <field name="name">xml.view.picking.form.inherit</field>
      <field name="model">stock.picking</field>
      <field name="inherit_id" ref="stock.view_picking_form"/>        
      <field name="arch" type="xml">

          <button name='button_validate' position="after">
            <button name='button_leer_xml' type='object' string='Leer XML' class="oe_highlight"/>
          </button>
      </field>
  </record>
  
  <record  model="ir.ui.view" id="purchase_importa_cfdi_form">
      <field name="name">purchase.importa.cfdi.form</field>
      <field name="model">purchase.order</field>
      <field name="inherit_id" ref="purchase.purchase_order_form"/>        
      <field name="arch" type="xml">
          <field name="company_id" position="after">
            <field name="file_xml" filename="file_name"/>     
            <field name="file_name" invisible="1"/>
            <field name="import_xml_cfdi" readonly="1"/>
          </field>
      </field>
  </record>

  <record  model="ir.ui.view" id="pmg_importa_cfdi_tree">
      <field name="name">pmg.importa.cfdi.tree</field>
      <field name="model">pmg.importa.cfdi.line</field>            
      <field name="arch" type="xml">
          <tree string="Importacion de Cfdis">
            <field name="file_name"/>
          </tree>
      </field>
  </record>

  <record  model="ir.ui.view" id="pmg_cfdi_adenda_form">
    <field name="name">pmg.importa.cfdi.adenda.form</field>
    <field name="model">pmg.importa.cfdi.line.adenda</field>            
    <field name="arch" type="xml">          
        <form string="Adenda Cfdi">

          <group>
            <group>
              <field name="adenda_chasis" /> 
              <field name="adenda_numero" /> 
              <field name="adenda_clave_color" /> 
              <field name="adenda_nombre_color" /> 
              <field name="adenda_opcionales" /> 
            </group>
          </group>

        </form>
    </field>
  </record>

  <record  model="ir.ui.view" id="pmg_load_images_import_form">
    <field name="name">pmg.importa.cfdi.form</field>
    <field name="model">pmg.importa.cfdi.line</field>            
    <field name="arch" type="xml">          
        <form string="Importacion de Cfdis">
            
          <header>
             <!-- <button name="leer_archivo" type="object" string="Leer Archivo" 
              class="oe_highlight"/> -->
            <!--<button name="leer_description" type="object" string="Leer Descripcion TT" 
              class="oe_highlight"/> -->

            <!-- <button name="leer_description_solomoto" type="object" string="Leer Descripcion SOLO" 
              class="oe_highlight"/> -->
            
            <!--<button name="leer_description_jurgen" type="object" string="Leer Descripcion Jurgen" 
              class="oe_highlight"/> -->

            <button name="mapear_proveedor" type="object" string="Buscar Proveedor" 
              class="oe_highlight"/>

            <field name="state" widget="statusbar"/>
          </header>
          <sheet>
            <group>
              <group>
                <field name="file_xml" filename="file_name" states="draft"/>     
                <field name="file_name" invisible="1"/>
              </group>
            </group>
            <group states="ready">
              <group>
                <field name="cfdi_emisor_rfc"/>
                <field name="partner_id"/>
                <field name="cfdi_uuid"/>
                <field name="cfdi_serie"/>
                <field name="cfdi_folio"/>
              </group>
              <group>
                <field name="cfdi_fecha"/>
                <field name="cfdi_moneda"/>
                <field name="cfdi_subtotal"/>
                <field name="cfdi_total"/>
                <!-- <field name="cfdi_adenda"/> -->
              </group>
            </group>
            <notebook>
              <page string="Conceptos">
                <field name="cfdi_product_ids" editable="bottom">
                  <tree>
                    <field name="cfdi_product_id"/>
                    <field name="cfdi_product_sku"/>
                    <field name="cfdi_product_description"/>
                    <field name="cfdi_product_qty"/>
                    <field name="cfdi_product_price"/>
                    <field name="cfdi_product_amount"/>
                    <!-- <field name="cfdi_product_discount"/> -->
                    <!-- <field name="cfdi_product_tax_code"/> -->
                    <!-- <field name="cfdi_product_tax_amount"/> -->
                    <field name="cfdi_product_clave_prod"/>
                    <field name="cfdi_product_chasis"/>
                    <field name="cfdi_product_numero"/>
                    <field name="cfdi_product_clave_color"/>
                    <field name="cfdi_product_nombre_color"/>
                    <field name="cfdi_product_opcionales"/>
                    <field name="cfdi_product_state"/>
                  </tree>
                </field>
              </page>
              <page string="Otros">
                <group>
                  <field name="cfdi_errors"/>
                  <field name="cfdi_data" groups="base.group_no_one"/>
                  <field name="cfdi_adenda"/>
                  <field name="purchase_id"/>
                </group>
              </page>
            </notebook>
          </sheet>
        </form>
                    
    </field>
  </record>       

  <record model="ir.actions.act_window" id="pmg_importa_cfdi_action_window">
      <field name="name">Carga de Cfdis</field>
      <field name="res_model">pmg.importa.cfdi.line</field>
      <field name="view_mode">tree,form</field>
      <!-- <field name="view_type">form</field> -->
      <field name="domain"></field>
      <!-- <field name="view_id" ref="pmg_load_images_import_tree"/> -->
    </record>

    <!-- <menuitem id="menu_pmg_importa_cfdi"
      name="Carga de Cfdis"
      action="pmg_importa_cfdi_action_window"
      parent="purchase.menu_procurement_management"
      sequence="10"/> -->
   
  </data>
</odoo>