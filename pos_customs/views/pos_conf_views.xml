<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_pos_payment_method_c_form" model="ir.ui.view">
        <field name="name">view.pos.payment.method.c.form</field>
        <field name="model">pos.payment.method</field>
        <field name="inherit_id" ref="point_of_sale.pos_payment_method_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="payment_method_c"/>
            </xpath>
        </field>
    </record>

    <record id="pos_config_view_inherit_form" model="ir.ui.view">
        <field name="name">pos.config.inherit.view.form</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='receipt']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box">
                    <!-- <div class="o_setting_left_pane">
                        <field name="is_header_or_footer"/>
                    </div> -->
                    <div class="o_setting_right_pane">
                        <label for="credit_note_product_id"/>
                        <div class="text-muted">
                            Configura el producto utilizado en notas de credito
                        </div>
                        <div class="content-group mt16">
                            <field name="credit_note_product_id" />
                        </div>
                    </div>
                </div>
                <div class="col-12 col-lg-6 o_setting_box">
                    <!-- <div class="o_setting_left_pane">
                        <field name="is_header_or_footer"/>
                    </div> -->
                    <div class="o_setting_right_pane">
                        <label for="forma_pago_anticipo"/>
                        <div class="text-muted">
                            Forma de pago para nota de credito
                        </div>
                        <div class="content-group mt16">
                            <field name="forma_pago_anticipo" />
                        </div>
                    </div>
                </div>
                <div class="col-12 col-lg-6 o_setting_box">
                    <!-- <div class="o_setting_left_pane">
                        <field name="is_header_or_footer"/>
                    </div> -->
                    <div class="o_setting_right_pane">
                        <label for="monto_efectivo_max"/>
                        <div class="text-muted">
                            Ingresa el monto maximo permitido para transacciones en efectivo
                        </div>
                        <div class="content-group mt16">
                            <field name="monto_efectivo_max" />
                        </div>
                    </div>
                </div>

                <div class="col-12 col-lg-6 o_setting_box">
                    <!-- <div class="o_setting_left_pane">
                        <field name="is_header_or_footer"/>
                    </div> -->
                    <div class="o_setting_right_pane">
                        <label for="monto_pago_max"/>
                        <div class="text-muted">
                            Ingresa el monto maximo permitido para pagos de los ultimos 6 meses
                        </div>
                        <div class="content-group mt16">
                            <field name="monto_pago_max" />
                        </div>
                    </div>
                </div>

                <div class="col-12 col-lg-6 o_setting_box">
                    <!-- <div class="o_setting_left_pane">
                        <field name="is_header_or_footer"/>
                    </div> -->
                    <div class="o_setting_right_pane">
                        <label for="email_notificacion_sat"/>
                        <div class="text-muted">
                            Configura el email de notificacion para pagos, cuando se hayan superado los montos permitidos
                        </div>
                        <div class="content-group mt16">
                            <field name="email_notificacion_sat" />
                        </div>
                    </div>
                </div>

            </xpath>
        </field>
    </record>

</odoo>