<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="PaymentScreenCustom" t-inherit="point_of_sale.PaymentScreen" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('payment-buttons')]" position="inside">
            <t t-if="currentOrder.is_payment_invoice">
                <div class="complemento-button">
                    <div class="button" t-att-class="button highlight">
                        <i class="fa fa-file-text-o" />
                        <span>
                            <t t-esc="currentOrder.selected_invoice.name"></t>
                        </span>                      
                    </div>
                </div>
            </t>
           
        </xpath>
    </t>
</templates>
