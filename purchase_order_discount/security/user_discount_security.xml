<?xml version="1.0" ?>
<odoo>


    <record id="purchase_discount" model="ir.module.category">
        <field name="name">Descuentos en Compras</field>
        <field name="description">Descuentos en compras</field>
        <field name="sequence">8</field>
    </record>

    <record id="user_discount_purchase_group" model="res.groups">
        <field name="category_id" ref="purchase_discount"/>
        <field name="name">Editar descuentos en compras</field>
    </record>

    <record id="user_discount_purchase_create_group" model="res.groups">
        <field name="category_id" ref="purchase_discount"/>
        <field name="name">Crear descuentos en compras</field>
    </record>

    <record id="user_price_purchase_group" model="res.groups">
        <field name="category_id" ref="purchase_discount"/>
        <field name="name">Precio unitario en compras</field>
    </record>



</odoo>


